{
  "manifest_version": 3,
  "name": "e.g.Frame",
  "version": "1.0.0",
  "description": "Enhanced Frame.io controls with skip buttons, AI transcription, and smart commenting tools",
  "permissions": ["storage"],
  "host_permissions": [
    "https://app.frame.io/*",
    "https://api.assemblyai.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.frame.io/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
