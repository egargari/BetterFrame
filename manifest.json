{
  "manifest_version": 3,
  "name": "BetterFrame - Enhanced Frame.io Controls",
  "version": "1.0.0",
  "description": "Adds enhanced video controls to Frame.io, including 5-second skip forward/backward buttons",
  "permissions": ["storage"],
  "host_permissions": [
    "https://app.frame.io/*",
    "https://api.openai.com/*",
    "https://unpkg.com/*",
    "https://cdn.jsdelivr.net/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://app.frame.io/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["ffmpeg-core.js"],
      "matches": ["https://app.frame.io/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
